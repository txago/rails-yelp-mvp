<h2 class="border-bottom py-4 my-4 font-weight-bold">Write a review for <%= @restaurant.name %></h2>
<div class="border-bottom pb-2 mb-4">
  <%= simple_form_for [@restaurant, @review] do |f|%>
  <div class="form-group">
    <span>💬 Your comments</span>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <span>⭐️ Your rating</span>
    <%= f.select :rating, [0, 1, 2, 3, 4, 5], {}, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-secondary btn-block mb-2' %>
  <% end %>
</div>

<div class="border-bottom pb-4 mb-3">
  <%= link_to 'Back to restaurant', restaurant_path(@restaurant), class: 'btn btn-secondary' %>
</div>
